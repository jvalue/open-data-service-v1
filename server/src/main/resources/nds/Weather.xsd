			<xs:documentation>AnalogValue represents an analog MeasurementValue.</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="timeStamp" minOccurs="1" maxOccurs="1" type="xs:dateTime" sawsdl:modelReference="http://iec.ch/TC57/CIM-generic#MeasurementValue.timeStamp">
				<xs:annotation>
					<xs:documentation>The time when the value was last updated</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="value" minOccurs="1" maxOccurs="1" type="xs:float" sawsdl:modelReference="http://iec.ch/TC57/CIM-generic#AnalogValue.value">
				<xs:annotation>
					<xs:documentation>The value to supervise.</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="AtmosphericAnalog" sawsdl:modelReference="http://iec.ch/TC57/CIM-generic#AtmosphericAnalog">
		<xs:annotation>
			<xs:documentation>Analog (float) measuring an atmospheric condition.</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="kind" minOccurs="1" maxOccurs="1" type="m:AtmosphericAnalogKind" sawsdl:modelReference="http://iec.ch/TC57/CIM-generic#AtmosphericAnalog.kind">
